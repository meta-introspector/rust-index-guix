[package]
name = "index-guix"
version = "1.0.3"
edition = "2021"
license = "GPL-3.0+ OR CC0-1.0"
description = "Parser for guix's scm index files focused on extracting Rust crate information"
keywords = ["crates-index", "guix", "repo", "scm"]
include = ["src/*.rs"]

[dependencies]
nom = "7.1.3"
gix = { version = "0.67", optional = true, default-features = false, features = ["basic", "blocking-network-client", "blocking-http-transport-reqwest-rust-tls"] }

[features]
default = ["git"]
git = ["dep:gix"]

[profile.dev]
opt-level = 2
